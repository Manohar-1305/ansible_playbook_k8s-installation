{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Effect": "Allow",
			"Action": [
				"ec2:CreateVolume",
				"ec2:AttachVolume",
				"ec2:DetachVolume",
				"ec2:DeleteVolume",
				"ec2:DescribeVolumes",
				"ec2:ModifyVolume",
				"ec2:DescribeVolumeStatus",
				"ec2:CreateSnapshot",
				"ec2:DeleteSnapshot"
			],
			"Resource": "*"
		},
		{
			"Effect": "Allow",
			"Action": [
				"ec2:DescribeInstances",
				"ec2:DescribeSubnets",
				"ec2:DescribeSecurityGroups"
			],
			"Resource": "*"
		}
	]
}